<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="item_config">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:translationZ">8dp</item>
    </style>

    <style name="btn_clear">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:padding">12dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:src">@drawable/clear</item>
    </style>

    <style name="tag_card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#3000</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowDx">8</item>
    </style>
</resources>