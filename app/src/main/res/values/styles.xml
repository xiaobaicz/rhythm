<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="item_config">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:translationZ">8dp</item>
    </style>

    <style name="btn_clear">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:padding">12dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:src">@drawable/clear</item>
    </style>
</resources>